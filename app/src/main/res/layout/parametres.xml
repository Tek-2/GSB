<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include layout="@layout/entete"></include>
    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Paramètres"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Email :"
        android:textColor="#1eb300"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/main_edittext_quantite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:hint="exemple@email.com"
        android:backgroundTint="#2E41AA">

    </EditText>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Nom :"
        android:textColor="#1eb300"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/main_edittext_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#2E41AA"
        android:hint="Ex: Cohen">

    </EditText>
    <TextView
        android:id="@+id/main_textview_mdp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Prénom :"
        android:textColor="#1eb300"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/main_edittext_mdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#2E41AA"
        android:hint="Ex: Léa">

    </EditText>



    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Mot de passe :"
        android:textColor="#1eb300"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voir le mot de passe"
        android:padding="4dp"
        android:textColor="#1eb300"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:linksClickable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Changer le mot de passe"
        android:padding="4dp"
        android:textColor="#1eb300"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:linksClickable="true"/>

</LinearLayout>
